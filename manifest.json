{
  "name": "Yext Fields",
  "description": "Shows Yext fields used on a Pages page.",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content-script.js"]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/yext.png",
      "32": "/images/yext.png",
      "48": "/images/yext.png",
      "128": "/images/yext.png"
    }
  },
  "icons": {
    "16": "/images/yext.png",
    "32": "/images/yext.png",
    "48": "/images/yext.png",
    "128": "/images/yext.png"
  },
  "options_page": "options.html"
}
